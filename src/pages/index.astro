  <script>
    // Scroll to top functionality
    const scrollToTopButton = document.getElementById("scroll-to-top");

    if (scrollToTopButton) {
      scrollToTopButton.addEventListener("click", () => {
        window.scrollTo({
          top: 0,
          behavior: "smooth",
        });
      });
    }

    // Exchange Select Modal functionality
    const openExchangeModalBtn = document.getElementById("open-exchange-modal");
    const exchangeModal = document.getElementById("exchange-modal");
    
    if (openExchangeModalBtn && exchangeModal) {
      openExchangeModalBtn.addEventListener("click", () => {
        exchangeModal.classList.remove("hidden");
        document.body.style.overflow = "hidden";
      });
      
      // Close modal on backdrop click
      const modalBackdrop = exchangeModal.querySelector("[data-modal-backdrop]");
      const modalClose = exchangeModal.querySelector("[data-modal-close]");
      
      if (modalBackdrop) {
        modalBackdrop.addEventListener("click", () => {
          exchangeModal.classList.add("hidden");
          document.body.style.overflow = "";
        });
      }
      
      if (modalClose) {
        modalClose.addEventListener("click", () => {
          exchangeModal.classList.add("hidden");
          document.body.style.overflow = "";
        });
      }
    }

    // Support Modal functionality
    const supportBtns = document.querySelectorAll(".support-btn");
    const supportModal = document.getElementById("support-modal");
    const closeSupportModalBtn = document.getElementById("close-support-modal");
    const supportModalBackdrop = document.getElementById(
      "support-modal-backdrop",
    );

    function openSupportModal(e: Event) {
      e.preventDefault();
      if (supportModal) {
        supportModal.classList.remove("hidden");
        document.body.style.overflow = "hidden";
      }
    }

    function closeSupportModal() {
      if (supportModal) {
        supportModal.classList.add("hidden");
        document.body.style.overflow = "";
      }
    }

    supportBtns.forEach((btn) => {
      btn.addEventListener("click", openSupportModal);
    });

    if (closeSupportModalBtn) {
      closeSupportModalBtn.addEventListener("click", closeSupportModal);
    }

    if (supportModalBackdrop) {
      supportModalBackdrop.addEventListener("click", closeSupportModal);
    }

    // Close support modal on Escape key
    document.addEventListener("keydown", (e) => {
      if (
        e.key === "Escape" &&
        supportModal &&
        !supportModal.classList.contains("hidden")
      ) {
        closeSupportModal();
      }
    });

    // Language Toggle functionality
    // Force English as default - comment out for production if language toggle is needed
    localStorage.setItem("language", "en");
    let currentLang = "en";

    const mobileLangToggle = document.getElementById("mobile-lang-toggle");
    const desktopLangToggle = document.getElementById("desktop-lang-toggle");
    const langText = document.querySelector(".lang-text");
    const langKr = document.querySelector(".lang-kr");
    const langEn = document.querySelector(".lang-en");

    function updateLanguage(lang: string) {
      currentLang = lang;
      localStorage.setItem("language", lang);

      // Update toggle buttons
      if (langText) langText.textContent = lang === "ko" ? "KR" : "EN";

      if (lang === "ko") {
        langKr?.classList.add("bg-aden-primary", "text-white");
        langKr?.classList.remove("text-aden-text-muted");
        langEn?.classList.remove("bg-aden-primary", "text-white");
        langEn?.classList.add("text-aden-text-muted");
      } else {
        langEn?.classList.add("bg-aden-primary", "text-white");
        langEn?.classList.remove("text-aden-text-muted");
        langKr?.classList.remove("bg-aden-primary", "text-white");
        langKr?.classList.add("text-aden-text-muted");
      }

      // Update all text elements
      document
        .querySelectorAll("[data-lang-ko][data-lang-en]")
        .forEach((el) => {
          const content = el.getAttribute(`data-lang-${lang}`);
          // For elements with HTML content (like br tags), use innerHTML
          if (
            content &&
            (content.includes("<br") ||
              content.includes("</") ||
              content.includes("/>"))
          ) {
            el.innerHTML = content;
          } else {
            el.textContent = content;
          }
        });
    }

    // Mobile language toggle
    if (mobileLangToggle) {
      mobileLangToggle.addEventListener("click", () => {
        const newLang = currentLang === "ko" ? "en" : "ko";
        updateLanguage(newLang);
      });
    }

    // Desktop language toggle
    if (desktopLangToggle) {
      desktopLangToggle.addEventListener("click", (e) => {
        const target = e.target as HTMLElement;
        if (
          target.classList.contains("lang-kr") ||
          target.closest(".lang-kr")
        ) {
          updateLanguage("ko");
        } else if (
          target.classList.contains("lang-en") ||
          target.closest(".lang-en")
        ) {
          updateLanguage("en");
        }
      });
    }

    // Initialize language on page load
    updateLanguage(currentLang);

    // Countdown Timer functionality
    function initCountdown() {
      // Target date: July 23rd, 2025 at 6pm UTC+9 (Korean Time)
      const targetDate = new Date("2025-07-23T18:00:00+09:00");

      const daysEl = document.getElementById("days");
      const hoursEl = document.getElementById("hours");
      const minutesEl = document.getElementById("minutes");
      const secondsEl = document.getElementById("seconds");
      const countdownSection = document.getElementById("countdown-section");

      function updateCountdown() {
        const now = new Date();
        const timeLeft = targetDate.getTime() - now.getTime();

        if (timeLeft <= 0) {
          // Countdown has ended - hide the entire countdown section
          if (countdownSection) {
            countdownSection.style.display = "none";
          }
          return;
        }

        const days = Math.floor(timeLeft / (1000 * 60 * 60 * 24));
        const hours = Math.floor(
          (timeLeft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
        );
        const minutes = Math.floor((timeLeft % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((timeLeft % (1000 * 60)) / 1000);

        // Update the display with zero-padding
        if (daysEl) daysEl.textContent = days.toString().padStart(2, "0");
        if (hoursEl) hoursEl.textContent = hours.toString().padStart(2, "0");
        if (minutesEl)
          minutesEl.textContent = minutes.toString().padStart(2, "0");
        if (secondsEl)
          secondsEl.textContent = seconds.toString().padStart(2, "0");
      }

      // Update immediately and then every second
      updateCountdown();
      setInterval(updateCountdown, 1000);
    }

    // Initialize countdown on page load
    initCountdown();
  </script>

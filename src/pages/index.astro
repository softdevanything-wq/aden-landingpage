      </div>

      <!-- Mobile Navigation and Language Selector -->
      <div class="md:hidden flex items-center gap-4 min-h-[25px]">
        <div class="flex items-center gap-4">
          <!-- <a
            href="#"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            Trade
          </a> -->
          <a
            href="#fee-section"
            class="text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            <span data-lang-ko="수수료" data-lang-en="Fee">Fee</span>
          </a>
          <a
            href="#"
            class="support-btn text-white/90 hover:text-white text-[13px] font-pretendard"
          >
            <span data-lang-ko="고객센터" data-lang-en="Support">Support</span>
          </a>
        </div>
        <!-- <button
          id="mobile-lang-toggle"
          class="flex items-center gap-1 px-2 py-[6px] border border-white/[0.12] bg-white/[0.04] backdrop-blur-[6px] rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)] cursor-pointer"
        >
          <span
            class="lang-text text-[#E8E8E8]/80 text-center font-play text-xs font-bold leading-4"
          >
            KR
          </span>
          <svg
            width="8"
            height="8"
            viewBox="0 0 8 8"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M1.47718 2.83731C1.56704 2.73248 1.72486 2.72033 1.82969 2.81019L4.00033 4.67074L6.17097 2.81019C6.2758 2.72034 6.43362 2.73248 6.52348 2.83731C6.61333 2.94214 6.60119 3.09996 6.49636 3.18982L4.16303 5.18982C4.06941 5.27007 3.93125 5.27007 3.83763 5.18982L1.5043 3.18982C1.39947 3.09996 1.38733 2.94214 1.47718 2.83731Z"
              fill="#EDA320"></path>
          </svg>
        </button> -->
      </div>

      <!-- Desktop Navigation Links -->
      <div class="hidden md:flex items-center gap-10 min-h-[40px]">
        <!-- <a
          href="#"
          class="text-white/90 hover:text-white text-base font-pretendard"
        >
          Trade
        </a> -->
        <a
          href="#fee-section"
          class="text-white/90 hover:text-white text-base font-pretendard"
        >
          <span data-lang-ko="수수료" data-lang-en="Fee">Fee</span>
        </a>
        <a
          href="#"
          class="support-btn text-white/90 hover:text-white text-base font-pretendard"
        >
          <span data-lang-ko="고객센터" data-lang-en="Support">Support</span>
        </a>
      </div>

      <!-- Desktop Language Selector -->
      <!-- <div
        id="desktop-lang-toggle"
        class="hidden md:flex items-center bg-aden-dark/40 border border-white/[0.06] rounded-[26px] p-2 cursor-pointer"
      >
        <div
          class="lang-kr px-4 py-2 rounded-[18px] bg-aden-primary text-white font-play text-sm font-bold transition-all"
        >
          KR
        </div>
        <div
          class="lang-en px-4 py-2 rounded-[18px] text-aden-text-muted font-play text-sm font-bold transition-all"
        >
          EN
        </div>
      </div> -->
      <div class="hidden md:flex"></div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section
    class="relative h-[700px] md:h-[1024px] flex flex-col items-center px-4 md:px-[100px] pt-[30px] md:pt-[30px] pb-[150px] md:pb-0 gap-[100px] overflow-hidden"
  >
    <!-- Background Sky -->
    <div class="absolute inset-0 w-full h-[770px]">
      <!-- Orange Gradient Blur - Mobile -->
      <div
        class="md:hidden absolute left-0 top-[-107px] w-[374px] h-[213px] rounded-full bg-aden-primary blur-[250px]"
      >
      </div>

      <!-- Circular Gradient Overlay - Mobile -->
      <div
        class="md:hidden absolute left-1/2 top-[-30px] transform -translate-x-1/2 w-[400px] h-[250px] rounded-full bg-gradient-to-b from-black/80 to-transparent blur-[80px]"
      >
      </div>

      <!-- Orange Gradient Blur - Desktop -->
      <div
        class="hidden md:block absolute left-1/2 top-[-210px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-primary blur-[250px]"
      >
      </div>

      <!-- Desktop Coins and Sky -->
      <img
        src={`${BASE_URL}shiny_coins_loop.webp`}
        alt="Sky background"
        class="hidden md:block absolute left-1/2 transform -translate-x-1/2 top-[142px] w-[1240px] h-[882px] object-cover"
      />
      <img
        src={`${BASE_URL}sky_background.webp`}
        alt="Sky overlay"
        class="hidden md:block absolute left-0 top-0 w-full h-[924px] object-cover"
      />

      <!-- Dark Gradient Blur - Mobile -->
      <div
        class="md:hidden absolute left-[-176px] top-[178px] w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"
      >
      </div>

      <!-- Dark Gradient Blur - Desktop -->
      <div
        class="hidden md:block absolute left-1/2 top-[305px] transform -translate-x-1/2 w-[728px] h-[414px] rounded-full bg-aden-dark blur-[250px]"
      >
      </div>

      <!-- Mobile Coins Background - Centered with Hero Content -->
      <div
        class="md:hidden absolute top-[380px] left-0 w-full h-[400px] flex items-center justify-center overflow-hidden"
      >
        <img
          src={`${BASE_URL}shiny_coins_loop.webp`}
          alt="Coins background"
          class="absolute left-1/2 transform -translate-x-1/2 w-[600px] h-[400px] object-contain opacity-90"
        />
      </div>

      <!-- Mobile Sky Overlay -->
      <img
        src={`${BASE_URL}sky_background.webp`}
        alt="Sky overlay"
        class="md:hidden absolute left-0 top-0 w-full h-[600px] object-cover opacity-50"
      />
    </div>

    <!-- Hero Content -->
    <div
      class="relative z-10 flex flex-col items-center gap-[50px] w-full max-w-[343px] md:max-w-[1240px] mt-[100px] md:mt-[198px]"
    >
      <!-- Text Content -->
      <div class="flex flex-col items-center gap-10 md:gap-10 w-full">
        <div class="flex flex-col items-center gap-5 w-full">
          <!-- Badge -->
          <div
            class="flex items-center justify-center gap-3 px-3 py-2 bg-white/[0.12] backdrop-blur-[2px] rounded-xl"
          >
            <span
              class="text-white text-center font-pretendard text-xs md:text-sm font-medium leading-4 md:leading-5"
              data-lang-ko="아덴 거래소 | DEX 암호화폐 선물 거래 플랫폼"
              data-lang-en="ADEN Exchange | DEX Crypto Futures Trading Platform"
            >
              <span class="sr-only">아덴 거래소 ADEN Exchange | </span>
              DEX Crypto Futures Trading Platform
            </span>
          </div>

          <!-- Main Heading -->
          <h1
            class="text-center font-pretendard text-[40px] md:text-6xl font-bold leading-[52px] md:leading-[80px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent w-full"
            data-lang-ko="검증된 기술력의 최저 수수료 DEX"
            data-lang-en="A Pro-Grade Order Book DEX for Everyone"
          >
            <span class="sr-only">ADEN Exchange 아덴 거래소 - </span>
            A Pro-Grade Order Book DEX 아덴 거래소 for Everyone
            <span
              class="sr-only"
              data-lang-ko=" | 아덴 암호화폐 거래소 | 비트코인 이더리움 거래 플랫폼"
              data-lang-en=" | ADEN Cryptocurrency Exchange | Bitcoin Ethereum Trading Platform"
            >
              | 아덴 암호화폐 거래소 | 비트코인 이더리움 거래 플랫폼</span
            >
          </h1>

          <!-- Description -->
          <p
            class="w-full md:max-w-[678px] text-white/60 text-center font-pretendard text-[13px] md:text-lg leading-5 md:leading-7"
            data-lang-ko="중앙화 거래소의 오더북 시스템의 편리함과 탈중앙화의 자유로움이 결합되었습니다. 초보자에게는 쉽고, 전문가에게는 더 강력합니다."
            data-lang-en="The convenience of a centralized exchange order book system combined with the freedom of decentralization. Easy for beginners, more powerful for experts."
          >
            <span class="sr-only">아덴 거래소(ADEN Exchange)는 </span>
            The convenience of a centralized exchange order book system combined
            with the freedom of decentralization. Easy for beginners, more
            powerful for experts.
            <span class="sr-only"> 아덴 거래소에서 안전한 암호화폐 거래를 시작하세요.</span>
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex items-center gap-3 w-full md:w-auto md:justify-center">
          <button
            id="open-exchange-modal"
            class="flex items-center justify-center gap-2 h-12 md:h-[52px] px-6 py-2 bg-aden-primary rounded-[10px] shadow-[0px_1px_2px_0px_rgba(13,13,18,0.06)] flex-1 md:flex-initial hover:bg-aden-primary/90 transition-colors cursor-pointer"
          >
            <span
              class="text-white text-center font-pretendard text-[13px] md:text-base font-bold leading-5 md:leading-6"
              data-lang-ko="거래 시작하기 →"
              data-lang-en="Start Trading →"
            >
              Start Trading →
            </span>
          </button>
        </div>

        <!-- Countdown Timer -->
        <div
          id="countdown-section"
          class="flex flex-col items-center gap-6 md:gap-8 w-full"
        >
          <div class="flex flex-col items-center gap-4 md:gap-6">
            <!-- Timer Label -->
            <span
              class="text-[#EDA320] font-pretendard text-[13px] md:text-sm font-bold leading-4 md:leading-5 tracking-[0.12px] md:tracking-[0.14px]"
              data-lang-ko="거래 런칭까지 남은 시간 (입금 기능이 오픈되었습니다.)"
              data-lang-en="Time Until Launch (Deposit Open)"
            >
              Time Until Launch (Deposit Open)
            </span>

            <!-- Timer Display -->
            <div id="countdown-timer" class="flex items-center gap-3 md:gap-6">
              <!-- Days -->
              <div class="flex flex-col items-center">
                <div class="relative">
                  <!-- Glow background -->
                  <div
                    class="absolute inset-0 bg-gradient-to-br from-[#EDA320] to-[#F5C842] rounded-2xl blur-md opacity-40 animate-pulse"
                  >
                  </div>
                  <!-- Main container -->
                  <div
                    class="relative w-16 h-16 md:w-24 md:h-24 bg-gradient-to-br from-[#EDA320]/20 to-[#F5C842]/20 backdrop-blur-[10px] border-2 border-[#EDA320]/50 rounded-2xl flex items-center justify-center shadow-2xl"
                  >
                    <span
                      id="days"
                      class="text-white font-pretendard text-xl md:text-4xl font-extrabold drop-shadow-lg"
                      >00</span
                    >
                  </div>
                </div>
                <span
                  class="text-[#EDA320] font-pretendard text-xs md:text-base font-bold mt-2 md:mt-3 uppercase tracking-wider"
                  data-lang-ko="일"
                  data-lang-en="Days">Days</span
                >
              </div>

              <!-- Animated Separator -->
              <div class="flex flex-col gap-1">
                <div
                  class="w-2 h-2 md:w-3 md:h-3 bg-[#EDA320] rounded-full animate-pulse"
                >
                </div>
                <div
                  class="w-2 h-2 md:w-3 md:h-3 bg-[#EDA320] rounded-full animate-pulse delay-500"
                >
                </div>
              </div>

              <!-- Hours -->
              <div class="flex flex-col items-center">
                <div class="relative">
                  <!-- Glow background -->
                  <div
                    class="absolute inset-0 bg-gradient-to-br from-[#EDA320] to-[#F5C842] rounded-2xl blur-md opacity-40 animate-pulse delay-150"
                  >
                  </div>
                  <!-- Main container -->
                  <div
                    class="relative w-16 h-16 md:w-24 md:h-24 bg-gradient-to-br from-[#EDA320]/20 to-[#F5C842]/20 backdrop-blur-[10px] border-2 border-[#EDA320]/50 rounded-2xl flex items-center justify-center shadow-2xl"
                  >
                    <span
                      id="hours"
                      class="text-white font-pretendard text-xl md:text-4xl font-extrabold drop-shadow-lg"
                      >00</span
                    >
                  </div>
                </div>
                <span
                  class="text-[#EDA320] font-pretendard text-xs md:text-base font-bold mt-2 md:mt-3 uppercase tracking-wider"
                  data-lang-ko="시간"
                  data-lang-en="Hours">Hours</span
                >
              </div>

              <!-- Animated Separator -->
              <div class="flex flex-col gap-1">
                <div
                  class="w-2 h-2 md:w-3 md:h-3 bg-[#EDA320] rounded-full animate-pulse delay-300"
                >
                </div>
                <div
                  class="w-2 h-2 md:w-3 md:h-3 bg-[#EDA320] rounded-full animate-pulse delay-700"
                >
                </div>
              </div>

              <!-- Minutes -->
              <div class="flex flex-col items-center">
                <div class="relative">
                  <!-- Glow background -->
                  <div
                    class="absolute inset-0 bg-gradient-to-br from-[#EDA320] to-[#F5C842] rounded-2xl blur-md opacity-40 animate-pulse delay-300"
                  >
                  </div>
                  <!-- Main container -->
                  <div
                    class="relative w-16 h-16 md:w-24 md:h-24 bg-gradient-to-br from-[#EDA320]/20 to-[#F5C842]/20 backdrop-blur-[10px] border-2 border-[#EDA320]/50 rounded-2xl flex items-center justify-center shadow-2xl"
                  >
                    <span
                      id="minutes"
                      class="text-white font-pretendard text-xl md:text-4xl font-extrabold drop-shadow-lg"
                      >00</span
                    >
                  </div>
                </div>
                <span
                  class="text-[#EDA320] font-pretendard text-xs md:text-base font-bold mt-2 md:mt-3 uppercase tracking-wider"
                  data-lang-ko="분"
                  data-lang-en="Minutes">Minutes</span
                >
              </div>

              <!-- Animated Separator -->
              <div class="flex flex-col gap-1">
                <div
                  class="w-2 h-2 md:w-3 md:h-3 bg-[#EDA320] rounded-full animate-pulse delay-500"
                >
                </div>
                <div
                  class="w-2 h-2 md:w-3 md:h-3 bg-[#EDA320] rounded-full animate-pulse delay-900"
                >
                </div>
              </div>

              <!-- Seconds -->
              <div class="flex flex-col items-center">
                <div class="relative">
                  <!-- Glow background -->
                  <div
                    class="absolute inset-0 bg-gradient-to-br from-[#EDA320] to-[#F5C842] rounded-2xl blur-md opacity-40 animate-pulse delay-500"
                  >
                  </div>
                  <!-- Main container -->
                  <div
                    class="relative w-16 h-16 md:w-24 md:h-24 bg-gradient-to-br from-[#EDA320]/20 to-[#F5C842]/20 backdrop-blur-[10px] border-2 border-[#EDA320]/50 rounded-2xl flex items-center justify-center shadow-2xl"
                  >
                    <span
                      id="seconds"
                      class="text-white font-pretendard text-xl md:text-4xl font-extrabold drop-shadow-lg"
                      >00</span
                    >
                  </div>
                </div>
                <span
                  class="text-[#EDA320] font-pretendard text-xs md:text-base font-bold mt-2 md:mt-3 uppercase tracking-wider"
                  data-lang-ko="초"
                  data-lang-en="Seconds">Seconds</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Statistics Section -->
  <section class="py-10 md:py-10">
    <div class="flex flex-col justify-center items-center gap-12 w-full">
      <div
        class="relative flex flex-col md:flex-row justify-center items-center gap-6 md:gap-6 w-full py-10 md:py-16 px-6 md:px-12 overflow-hidden"
      >
        <div class="flex flex-col items-center gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[50px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            $1.2B+
          </h3>
          <p
            class="text-[#666D80] text-center font-pretendard text-[13px] md:text-base font-medium leading-5 md:leading-6"
            data-lang-ko="누적 거래량"
            data-lang-en="Cumulative Trading Volume"
          >
            Cumulative Trading Volume
          </p>
        </div>
        <div class="flex flex-col items-center gap-2 w-[280px]">
          <h3
            class="text-center font-pretendard text-[40px] md:text-5xl font-bold leading-[50px] md:leading-[60px] bg-gradient-to-b from-white to-white/40 bg-clip-text text-transparent"
          >
            85K+
          </h3>
          <p
            class="text-[#666D80] text-center font-pretendard text-[13px] md:text-base font-medium leading-5 md:leading-6"
